<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="500dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/spacename_history"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightblue"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roomtype_history"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/roomnumbers_history"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/maxoccupancy_history"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/private_icon_history"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/privacy_history"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@color/darkgrey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/whiteboard_icon_history"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/whiteboard_history"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@color/darkgrey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/computer_icon_history"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/computer_history"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@color/darkgrey" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/projector_icon_history"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:padding="5dp"/>

                    <TextView
                        android:id="@+id/projector_history"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:textColor="@color/darkgrey" />
                </LinearLayout>
                
            </LinearLayout>

            <TextView
                android:id="@+id/reservetype_history"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
            
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Last Reservation:"
                android:textColor="@color/brown" />
            
            <TextView
                android:id="@+id/last_reservation_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/brown" />
        </LinearLayout>
        
        <TextView
            android:id="@+id/availablenow_history"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="AVAILABLE NOW"
            android:textSize="30sp"
            android:textColor="@color/lightblue" />
        
        <!-- THIS TEXT VIEW IS FOR NOTES -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

	       <EditText
	           android:id="@+id/note"
	           android:layout_width="300dp"
	           android:layout_height="200dp"
	           android:layout_marginTop="10dp"
	           android:layout_weight="0.90"
	           android:background="@color/white"
	           android:orientation="horizontal"
	            android:gravity="top"
	           android:text="Edit notes here:"
	           android:textColor="@android:color/black"/>
        </LinearLayout>
        
        <Button
            android:id="@+id/savenote1"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="Save" />
        
    </LinearLayout>

</ScrollView>